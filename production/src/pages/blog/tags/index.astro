---
import { getCollection } from "astro:content";
import Layout from '../../../layouts/blog.astro';
const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<Layout title="DragonForgeNEXUS Blog Tag Index" description='DragonForgeNEXUS Blog Tag Index'>
  <div class="flex flex-wrap gap-5 justify-center mt-5 mb-10 px-5 md:px-0">
    {
      tags.map((tag) => (
        <a href={`/blog/tags/${tag}`} class="btn btn-outline">{tag}</a>
      ))
    }
    </div>

</Layout>