---
export interface Props {
	title: string;
	description: string;
	page: string;
}

const { title, description, page } = Astro.props;
const full_title = title + ' | DragonForgeMedia'
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Imports
import Footer from '../components/Footer.astro';
import Header from '../components/DragonForgeMedia/Header.astro';
import Head from '../components/head.astro'
---

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark" class="bg-slate-900 text-slate-400">
	<head>
		<Head title={full_title} description={description} icon="/imgs/Logos/Square/Solid/250/PNG/DRAGONFORGEMEDIA.png" banner="/imgs/Logos/Banner/Solid/1000x500/PNG/DRAGONFORGEMEDIA-solid-banner.png" page={canonicalURL}/>
	</head>
	<body>
		<Header subtitle={title}/>
		<div class="min-h-screen">
			<slot />
		</div>
		<Footer />
	</body>
</html>