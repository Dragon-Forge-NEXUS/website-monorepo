---
export interface Props {
	title: string;
	description: string;
	page: string;
}

const { title, description, page } = Astro.props;
const full_title = title + ' | DragonForgeNEXUS'
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Imports
import Footer from '../components/Footer.astro';
import Head from '../components/head.astro'
---
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark" class="bg-green-950 ">
	<head>
		<Head title={full_title} description={description} icon="/imgs/Logos/Square/Solid/250/PNG/DRAGONFORGENEXUS.png" banner="/imgs/Logos/Banner/Solid/1000x500/PNG/DRAGONFORGENEXUS-solid-banner.png" page={canonicalURL}/>
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
</style>
