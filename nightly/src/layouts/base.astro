---
export interface Props {
	title: string;
	description: string;
  banner: string;
  icon: string;
}

const { title, description, banner, icon } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Imports
import Head from '../components/common/head.astro';
---
<!DOCTYPE html>
<html lang="en" class="dark:bg-slate-900 bg-slate-300 dark:text-slate-300 text-slate-900 transition ease-in-out delay-150 duration-300" transition:animate="slide">
	<head>
		<Head title={title} description={description} icon={icon} banner={banner} page={canonicalURL}/>
	</head>
	<body>
		<slot />
	</body>
</html>