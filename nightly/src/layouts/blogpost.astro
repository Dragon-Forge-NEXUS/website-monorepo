---
import Layout from "./main.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.data.title} description='Altie122'>
  <div class="prose md:prose-lg lg:prose-xl mx-auto">
  <p>{String(frontmatter.data.pubDate).slice(0, 15)}</p>
  <p><em>{frontmatter.data.description}</em></p>
  <p>Written by: {frontmatter.data.author}</p>
  <img src={frontmatter.data.image.url} width="300" alt={frontmatter.data.image.alt} transition:name={"BlogPost" + frontmatter.data.slug}/>
  <slot />
  </div>
</Layout>