---
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---
<div class="flex flex-wrap gap-5 justify-center my-5 px-5 md:px-0">
  {
    tags.map((tag) => (
      <a href={`/blog/tags/${tag}`} class=" outline rounded-lg p-1 transition ease-in-out delay-150 hover:scale-105 duration-300">{tag}</a>
    ))
  }
</div>